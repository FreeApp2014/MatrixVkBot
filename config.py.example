#!/usr/bin/env python
# -*- coding: utf-8 -*-

server="https://matrix.org"
username="vk2matrix"
password="XXXXXX"
# matrix device id for client - set any string like 'k4nctrsE'
device_id = "vkbot" 

# Подключаться в VK через прокси:
use_proxy=True
# Tor:
socks5_proxy="localhost:9050"

# если списки пусты, то бот будет принимать приглашения от всех:
# если указаны и домены и пользователи, то если совпало хоть одно - то бот примет приглашение, если ни одно из указанных не совпало - то не примет.
# разрешить приглашать бота в комнаты только MATRIX-пользователям с указанных MATRIX-доменов (хоумсервера) - указать через запятую можно:
# if list empty - allow invite from all users. 
# if list not empty - allow invite if any equal
allow_domains=["matrix.org","example.net"]
# разрешить приглашать бота в комнаты только указанному пользователю MATRIX:
allow_users=["@user:domain.com"]

data_file="data.json"

log_path="MatrixVkBot.log"

# vk_app_id - идентификатор APP ID (числовое значение - см. документацию) - оставьте в None, если вы хотете, чтобы пользователи использовали свои vk_app_id:
vk_app_id=None

debug=True
